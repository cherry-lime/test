// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  password               String
  created_at             DateTime                 @default(now())
  updated_at             DateTime                 @updatedAt
  username               String                   @unique
  user_id                Int                      @id @default(autoincrement())
  role                   Role
  AssessmentParticipants AssessmentParticipants[]
  UserInTeam             UserInTeam[]

  @@index([role])
}

model Checkpoint {
  checkpoint_id                     Int                                 @id @default(autoincrement())
  checkpoint_name                   String
  checkpoint_description            String
  weight                            Int
  Maturity                          Maturity                            @relation(fields: [maturity_id], references: [maturity_id])
  maturity_id                       Int
  Category                          Category                            @relation(fields: [category_id], references: [category_id])
  category_id                       Int
  CheckpointInTopic                 CheckpointInTopic[]
  CheckpointAndAnswersInAssessments CheckpointAndAnswersInAssessments[]
}

model Answer {
  answer_id                         Int                                 @id @default(autoincrement())
  answer_text                       String                              @default("New Answer")
  answer_weight                     Float                               @default(0)
  Template                          Template                            @relation(fields: [template_id], references: [template_id])
  template_id                       Int
  CheckpointAndAnswersInAssessments CheckpointAndAnswersInAssessments[]

  @@unique([answer_text, template_id])
}

model Maturity {
  maturity_id    Int          @id @default(autoincrement())
  maturity_name  String       @default("New Maturity")
  maturity_order Int
  Template       Template     @relation(fields: [template_id], references: [template_id])
  template_id    Int
  Checkpoint     Checkpoint[]
  Feedback       Feedback[]

  @@unique([maturity_name, template_id])
}

model Topic {
  topic_id          Int                 @id @default(autoincrement())
  topic_name        String              @default("New Topic")
  Template          Template            @relation(fields: [template_id], references: [template_id])
  template_id       Int
  CheckpointInTopic CheckpointInTopic[]
  Feedback          Feedback[]

  @@unique([topic_name, template_id])
}

model CheckpointInTopic {
  checkpoint    Checkpoint @relation(fields: [checkpoint_id], references: [checkpoint_id])
  checkpoint_id Int
  topic         Topic      @relation(fields: [topic_id], references: [topic_id])
  topic_id      Int

  @@id([topic_id, checkpoint_id])
}

model Team {
  team_id         Int          @id @default(autoincrement())
  team_name       String       @unique
  invite_token    String       @unique @default(uuid()) @db.Uuid
  team_country    String
  team_department String
  UserInTeam      UserInTeam[]
  Assessment      Assessment[]
}

model UserInTeam {
  user      User     @relation(fields: [user_id], references: [user_id])
  user_id   Int
  team      Team     @relation(fields: [team_id], references: [team_id])
  team_id   Int
  joined_at DateTime @default(now())

  @@id([user_id, team_id])
  @@index([team_id, user_id])
}

model Assessment {
  assessment_id                     Int                                 @id @default(autoincrement())
  assessment_name                   String                              @default("New Assessment")
  country_name                      String                              @default("")
  department_name                   String                              @default("")
  feedback_text                     String                              @default("")
  created_at                        DateTime                            @default(now())
  updated_at                        DateTime                            @updatedAt
  completed_at                      DateTime?
  assessment_type                   AssessmentType
  template                          Template                            @relation(fields: [template_id], references: [template_id])
  template_id                       Int
  Team                              Team?                               @relation(fields: [team_id], references: [team_id])
  team_id                           Int?
  AssessmentParticipants            AssessmentParticipants[]
  CheckpointAndAnswersInAssessments CheckpointAndAnswersInAssessments[]

  @@unique([assessment_name, assessment_type, team_id])
}

model AssessmentParticipants {
  User          User       @relation(fields: [user_id], references: [user_id])
  user_id       Int
  Assessment    Assessment @relation(fields: [assessment_id], references: [assessment_id])
  assessment_id Int

  @@id([user_id, assessment_id])
  @@index([assessment_id, user_id])
}

model Template {
  template_id       Int            @id @default(autoincrement())
  template_name     String         @default("New Template")
  template_type     AssessmentType
  disabled          Boolean        @default(false)
  weight_range_min  Int            @default(1)
  weight_range_max  Int            @default(3)
  score_formula     String         @default("sum(x)")
  include_no_answer Boolean        @default(false)
  Assessment        Assessment[]
  Answers           Answer[]
  Topic             Topic[]
  Category          Category[]

  Maturity Maturity[]
  @@unique([template_name, template_type])
}

model Category {
  category_id   Int          @id @default(autoincrement())
  category_name String       @default("New Category")
  color         String       @default("#FF0000")
  order         Int
  Template      Template     @relation(fields: [template_id], references: [template_id])
  template_id   Int
  Feedback      Feedback[]
  Checkpoint    Checkpoint[]
  SubArea       SubArea[]

  @@unique([category_name, template_id])
}

model SubArea {
  subarea_id          Int      @id @default(autoincrement())
  subarea_name        String   @default("New Subarea")
  subarea_summary     String   @default("")
  subarea_description String   @default("")
  Category            Category @relation(fields: [category_id], references: [category_id])
  category_id         Int

  @@unique([subarea_name, category_id])
}

model CheckpointAndAnswersInAssessments {
  assessment    Assessment @relation(fields: [assessment_id], references: [assessment_id])
  assessment_id Int
  checkpoint    Checkpoint @relation(fields: [checkpoint_id], references: [checkpoint_id])
  checkpoint_id Int
  Answer        Answer?    @relation(fields: [answer_id], references: [answer_id])
  answer_id     Int?

  @@id([assessment_id, checkpoint_id])
  @@index([assessment_id])
}

model Feedback {
  feedback_id   Int      @id @default(autoincrement())
  feedback_name String
  feedback_text String
  Topic         Topic    @relation(fields: [topic_id], references: [topic_id])
  topic_id      Int
  Maturity      Maturity @relation(fields: [maturity_id], references: [maturity_id])
  maturity_id   Int
  answer_weight Float
  Category      Category @relation(fields: [category_id], references: [category_id])
  category_id   Int
  weight_factor Int
}

enum AssessmentType {
  INDIVIDUAL
  TEAM
}

enum Role {
  USER
  ASSESSOR
  ADMIN
}
